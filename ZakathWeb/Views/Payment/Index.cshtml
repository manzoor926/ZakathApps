@model List<PaymentModel>
@{ ViewData["Title"] = "Payments"; }
<div class="d-flex justify-content-between mb-4">
<h1>Zakath Payments</h1><a href="/Payment/Create" class="btn btn-success"><i class="fas fa-plus me-2"></i>Record Payment</a>
</div>
<div class="card"><div class="card-body"><table class="table">
<thead><tr><th>Date</th><th>Amount</th><th>Recipient</th><th>Notes</th><th>Actions</th></tr></thead>
<tbody>
@foreach (var item in Model) {
<tr><td>@item.PaymentDate.ToShortDateString()</td><td>@item.Amount.ToString("C")</td>
<td>@item.RecipientName</td><td>@item.Notes</td>
<td><form method="post" asp-action="Delete" asp-route-id="@item.PaymentId" class="d-inline">
<button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete?')"><i class="fas fa-trash"></i></button></form></td></tr>
}
</tbody>
</table></div></div>