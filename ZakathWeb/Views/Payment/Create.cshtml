@model PaymentRequest
@{ ViewData["Title"] = "Record Payment"; }
<div class="row justify-content-center"><div class="col-md-6"><div class="card"><div class="card-body">
<h3 class="mb-4">Record Payment</h3>
@if (ViewBag.Error != null) { <div class="alert alert-danger">@ViewBag.Error</div> }
<form method="post">
<div class="mb-3"><label>Amount</label><input asp-for="Amount" type="number" step="0.01" class="form-control" required /></div>
<div class="mb-3"><label>Date</label><input asp-for="PaymentDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" required /></div>
<div class="mb-3"><label>Recipient Name</label><input asp-for="RecipientName" class="form-control" /></div>
<div class="mb-3"><label>Notes</label><textarea asp-for="Notes" class="form-control"></textarea></div>
<button type="submit" class="btn btn-success">Save</button>
<a href="/Payment" class="btn btn-secondary">Cancel</a>
</form></div></div></div></div>