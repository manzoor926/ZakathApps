<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Zakath App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-success">
        <div class="container-fluid">
            <a class="navbar-brand" href="/Dashboard"><i class="fas fa-mosque me-2"></i>Zakath App</a>
            @if (Context.Session.GetString("AuthToken") != null)
            {
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="/Dashboard"><i class="fas fa-dashboard me-1"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Income"><i class="fas fa-arrow-up me-1"></i>Income</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Expense"><i class="fas fa-arrow-down me-1"></i>Expenses</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Asset"><i class="fas fa-wallet me-1"></i>Assets</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Zakath"><i class="fas fa-hand-holding-heart me-1"></i>Zakath</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Payment"><i class="fas fa-money-bill me-1"></i>Payments</a></li>
                        <li class="nav-item"><a class="nav-link text-warning" href="/Auth/Logout"><i class="fas fa-sign-out-alt me-1"></i>Logout</a></li>
                    </ul>
                </div>
            }
        </div>
    </nav>
    <main class="container my-4">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @RenderBody()
    </main>
    <footer class="bg-light text-center py-3 mt-5">
        <p class="text-muted mb-0">&copy; 2026 Zakath App</p>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>